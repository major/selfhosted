{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":automergeAll",
        "config:best-practices"
    ],
    "flux": {
      "fileMatch": ["(^|/).*\\.ya?ml$"]
    },
    "helm-values": {
      "fileMatch": ["(^|/).*\\.ya?ml$"]
    },
    "kubernetes": {
      "fileMatch": ["(^|/).*\\.ya?ml$"]
    },
    "git-submodules": {
      "enabled": true
    }
}
